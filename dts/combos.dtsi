// sticky "hyper" modifiers (Win + Alt + Ctrl + Shift) - Use with Tab - TailorKey
combo_sticky_hyp_rght_TKZ {
    timeout-ms = <50>;
    key-positions = <POS_RH_C2R5 POS_RH_C2R4>;
    bindings = <&sk LG(LA(LC(LSHFT)))>;
    layers = <LAYER_Base LAYER_Autoshift LAYER_Typing>;
};

