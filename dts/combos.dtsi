/* Combos trigger an action when multiple specific keys are pressed simultaneously or within a short timeframe  */
/* Combos detect a chord and execute a single binding in response  */

// F1 combo for Go60 - TailorKey
combo_F1_cb_TKZ {
    key-positions = <POS_LH_C5R1 POS_LH_C5R2>;
    bindings = <&kp F1>;
    layers = <LAYER_Base LAYER_Typing LAYER_Autoshift>;
};

